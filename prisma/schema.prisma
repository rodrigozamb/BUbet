generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id            String         @id @default(uuid())
  name          String
  username      String
  position      Int            @default(0)
  points        Int            @default(0)
  profile_url   String?
  email         String         @unique
  role          Role           @default(USER)
  password_hash String
  created_at    DateTime       @default(now())
  is_confirmed  DateTime?
  last_activity DateTime?
  bets          Bets[]
  Feedback      Feedback[]
  GoldenBanner  GoldenBanner[]

  notifications UserNotification[]
  badges        Badge[]

  favorite_competitor    Competitor? @relation(fields: [favorite_competitor_id], references: [id])
  favorite_competitor_id String?

  @@map("users")
}

model Event {
  id          String   @id @default(uuid())
  name        String
  description String
  local       String   @default("NÃ£o Definido")
  date        DateTime
  banner      String
  starts_at   DateTime
  ends_at     DateTime
  created_at  DateTime @default(now())

  competitors        Competitor[]
  eventResults       EventResults[]
  bets               Bets[]
  judges             Judge[]
  estandartes        GoldenBanner[]
  event_banner_types BannerType[]

  @@map("events")
}

model Competitor {
  id          String @id @default(uuid())
  name        String
  description String
  profile_url String

  created_at DateTime @default(now())

  events       Event[]
  eventResults EventResults[]
  estandartes  GoldenBanner[]
  users        User[]

  badges Badge[]

  @@map("competitors")
}

model EventResults {
  id           String       @id @default(uuid())
  eventId      String
  competitorId String
  placing      String
  score        Float
  estandartes  BannerType[]

  competitor Competitor @relation(fields: [competitorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  event      Event      @relation(fields: [eventId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  created_at DateTime @default(now())

  @@map("events_results")
}

model Bets {
  id      String   @id @default(uuid())
  userId  String
  eventId String
  bets    String[]

  points Int @default(0)

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  created_at  DateTime       @default(now())
  estandartes GoldenBanner[]

  @@index([userId, eventId])
  @@map("bets")
}

model Judge {
  id          String @id @default(uuid())
  first_name  String
  last_name   String
  nickname    String
  description String
  avatar      String

  events Event[]
  badges Badge[]

  @@map("judges")
}

model BannerType {
  id          String @id @default(uuid())
  name        String
  description String

  goldenBanner GoldenBanner[]

  events Event[]

  resultado EventResults[]

  @@map("banner_types")
}

model GoldenBanner {
  competitorId String
  eventId      String
  bannerTypeId String
  userId       String
  betId        String

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  bet        Bets       @relation(fields: [betId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  competitor Competitor @relation(fields: [competitorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  event      Event      @relation(fields: [eventId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  bannerType BannerType @relation(fields: [bannerTypeId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id(name: "id", [competitorId, eventId, bannerTypeId, userId])
  @@map("golden_banners")
}

model Feedback {
  id       String  @id @default(uuid())
  userId   String
  content  String
  verified Boolean @default(false)
  image    String?

  created_at DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("feedbacks")
}

model Notification {
  id         String   @id @default(uuid())
  title      String
  content    String
  link       String?
  created_at DateTime @default(now())
  icon       String?

  userNotifications UserNotification[]

  @@map("notifications")
}

model UserNotification {
  id            String    @id @default(uuid())
  is_visualized DateTime?
  created_at    DateTime  @default(now())

  userId         String
  notificationId String

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  notification Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("user_notifications")
}

model Badge {
  id          String   @id @default(uuid())
  created_at  DateTime @default(now())
  name        String
  description String
  image_url   String

  users       User[]
  competitors Competitor[]
  judges      Judge[]

  @@map("badges")
}
