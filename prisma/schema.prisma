generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id            String     @id @default(uuid())
  name          String
  username      String
  profile_url   String?
  email         String     @unique
  role          Role       @default(USER)
  password_hash String
  created_at    DateTime   @default(now())
  is_confirmed  DateTime?
  bets          Bets[]
  Feedback      Feedback[]

  @@map("users")
}

model Event {
  id          String   @id @default(uuid())
  name        String
  description String
  date        DateTime
  banner      String
  starts_at   DateTime
  ends_at     DateTime
  created_at  DateTime @default(now())

  competitors  Competitor[]
  eventResults EventResults[]
  bets         Bets[]
  judges       Judge[]
  estandartes  GoldenBanner[]

  @@map("events")
}

model Competitor {
  id          String @id @default(uuid())
  name        String
  description String
  profile_url String

  created_at DateTime @default(now())

  events       Event[]
  eventResults EventResults[]
  estandartes  GoldenBanner[]

  @@map("competitors")
}

model EventResults {
  eventId      String
  competitorId String
  placing      String
  score        Float

  competitor Competitor @relation(fields: [competitorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  event      Event      @relation(fields: [eventId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  created_at DateTime @default(now())

  @@id(name: "id", [competitorId, eventId])
  @@map("events_results")
}

model Bets {
  userId  String
  eventId String
  bets    String[]

  points Int @default(0)

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  created_at DateTime @default(now())

  @@id(name: "id", [userId, eventId])
  @@map("bets")
}

model Judge {
  id          String @id @default(uuid())
  first_name  String
  last_name   String
  nickname    String
  description String
  avatar      String

  events Event[]

  @@map("judges")
}

model BannerType {
  id          String @id @default(uuid())
  name        String
  description String

  goldenBanner GoldenBanner[]

  @@map("banner_types")
}

model GoldenBanner {
  competitorId String
  eventId      String
  bannerTypeId String

  competitor Competitor @relation(fields: [competitorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  event      Event      @relation(fields: [eventId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  bannerType BannerType @relation(fields: [bannerTypeId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id(name: "id", [competitorId, eventId, bannerTypeId])
  @@map("golden_banners")
}

model Feedback {
  id      String @id @default(uuid())
  userId  String
  content String

  created_at DateTime @default(now())
  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  
  @@map("feedbacks")
}
